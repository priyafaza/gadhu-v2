<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgregis"
    tools:context=".registrasi">


    <LinearLayout
        android:id="@+id/lin1"
        android:layout_width="match_parent"
        android:layout_height="266dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:srcCompat="@drawable/farmer" />
    </LinearLayout>

    <LinearLayout
        app:layout_constraintTop_toBottomOf="@id/lin1"
        android:id="@+id/lin2"
        android:layout_width="match_parent"
        android:layout_height="377dp"
        android:orientation="vertical">

        <TextView
            android:textAlignment="center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Hay Kamu, klik Masuk apabila kamu telah memiliki akun. Atau klik Registrasi apabila kamu belum memiliki akun. Terimakasih." />

        <LinearLayout
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="50dp"
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:layout_alignParentLeft="true"
                android:id="@+id/rectangle_3"
                android:layout_width="136dp"
                android:layout_height="36dp"
                android:background="@drawable/btnregis"
                android:elevation="15dp"
                android:text="Registrasi" />

            <Button
                android:layout_alignParentRight="true"
                android:id="@+id/button4"
                android:layout_width="136dp"
                android:layout_height="36dp"
                android:layout_marginStart="40dp"
                android:background="@drawable/btnlogin"
                android:text="Masuk" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>